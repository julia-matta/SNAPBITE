<div class="timeline-page">
  <h2 class="timeline-title">Timeline</h2>
  <p class="timeline-subtitle">Publica√ß√µes para voc√™!!</p>

  <% if @posts.blank? %>
    <p class="timeline-empty">Ainda n√£o h√° publica√ß√µes na sua timeline.</p>
  <% end %>

  <div class="timeline-list">
    <% @posts.each do |post| %>
      <% user = post.user %>
      <% restaurant = post.restaurant %>

      <div class="feed-card">
        <!-- HEADER: avatar + nome + legenda + pill + lixeira -->
        <div class="feed-card-header">
          <div class="feed-user">
            <% avatar =
              if user.profile_picture.attached?
                url_for(user.profile_picture)
              else
                asset_path("placeholder_profile.png")
              end %>

            <%= image_tag avatar, class: "feed-avatar" %>

            <div class="feed-user-text">
              <span class="feed-user-name"><%= user.username || user.email %></span>
              <% if post.caption.present? %>
                <span class="feed-user-caption"><%= post.caption %></span>
              <% end %>
            </div>
          </div>

          <div class="feed-right">
            <% menu_times =
              if post.respond_to?(:menu_times) && post.menu_times.present?
                post.menu_times
              elsif post.course.present?
                [post.course.to_s.tr('[]"', '')]
              else
                []
              end %>

            <% if menu_times.any? %>
              <span class="feed-pill">
                <%= menu_times.map { |v| v.to_s.capitalize }.join(" ‚Ä¢ ") %>
              </span>
            <% end %>

            <% if post.user == current_user %>
              <%= button_to post_path(post),
                    method: :delete,
                    data: { confirm: "Tem certeza que deseja excluir esta publica√ß√£o?" },
                    class: "feed-delete-btn" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- FOTOS -->
        <div class="feed-photos">
          <% if post.photos.attached? %>
            <% post.photos.first(2).each do |photo| %>
              <a href="#"
                 data-bs-toggle="modal"
                 data-bs-target="#postPhotosModal-<%= post.id %>">
                <%= image_tag photo, class: "feed-photo" %>
              </a>
            <% end %>
          <% elsif restaurant&.image_name.present? %>
            <a href="#"
               data-bs-toggle="modal"
               data-bs-target="#postPhotosModal-<%= post.id %>">
              <%= image_tag restaurant.image_name, class: "feed-photo single" %>
            </a>
          <% end %>
        </div>

        <!-- RESTAURANTE ESTRELAS -->
        <% if restaurant %>
          <div class="feed-restaurant">
            <div>
              <h4 class="restaurant-name"><%= restaurant.name %></h4>
              <p class="restaurant-meta">
                <%= restaurant.category %>
              </p>
            </div>

            <% if post.rating.present? %>
              <div class="feed-stars">
                <% 5.times do |i| %>
                  <% if i < post.rating.to_i %>
                    <i class="fas fa-star"></i>
                  <% else %>
                    <i class="far fa-star"></i>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- FOOTER -->
        <% rating_value = post.rating %>
        <% recommended =
             if rating_value.nil?
               true
             else
               rating_value >= 4
             end %>

        <div class="feed-footer">
          <button
            type="button"
            class="btn-recommend <%= recommended ? 'btn-recommend--positive' : 'btn-recommend--negative' %>">
            <% if recommended %>
              <i class="far fa-thumbs-up"></i>
              <span>Recomendo!</span>
            <% else %>
              <i class="far fa-thumbs-down"></i>
              <span>N√£o recomendo</span>
            <% end %>
          </button>

          <button
            class="feed-comments-toggle"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#comments-<%= post.id %>">
            <i class="far fa-comment"></i>
            <span><%= post.comments.count %></span>
          </button>
        </div>

        <!-- LISTA FORM DE COMENT√ÅRIOS -->
        <div class="collapse mt-2" id="comments-<%= post.id %>">
          <div class="comments-list">
            <% post.comments.each do |comment| %>
              <p class="comment-item">
                <strong><%= comment.user.username || comment.user.email %>:</strong>
                <%= comment.content %>
              </p>
            <% end %>
          </div>

          <%= form_with(model: [post, Comment.new], local: true) do |f| %>
            <div class="input-group mt-2">
              <%= f.text_field :content,
                    class: "form-control",
                    placeholder: "Escreva um coment√°rio..." %>
              <button class="btn btn-outline-secondary" type="submit">Enviar</button>
            </div>
          <% end %>
        </div>
      </div>

      <!-- FOTOS -->
      <div class="modal fade" id="postPhotosModal-<%= post.id %>" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content">
            <div class="modal-body p-0">
              <% if post.photos.attached? %>
                <% post.photos.each do |photo| %>
                  <%= image_tag photo, class: "w-100 d-block modal-photo" %>
                <% end %>
              <% elsif restaurant&.image_name.present? %>
                <%= image_tag restaurant.image_name, class: "w-100 d-block modal-photo" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
<!-- BOT√ÉO FLUTUANTE DA IA -->
<button id="open-ai-chat"
  style="
    position: fixed;
    bottom: 20px;
    right: 20px;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    background: #ff7a00;
    color: white;
    font-size: 24px;
    border: none;
    z-index: 9999;
    cursor: pointer;
  ">
  ü§ñ
</button>

<!-- MODAL DA IA -->
<div id="ai-modal"
  style="
    display: none;
    position: fixed;
    bottom: 100px;
    right: 20px;
    width: 320px;
    background: white;
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.3);
    z-index: 9999;
  ">

  <h5>Recomenda√ß√£o de restaurantes</h5>

  <textarea id="ai-message"
    class="form-control mb-2"
    placeholder="Ex: Quero um japon√™s barato"></textarea>

  <button id="send-ai"
    class="btn btn-primary btn-sm w-100">
    Perguntar
  </button>

  <div id="ai-response" class="mt-2"
    style="white-space: pre-wrap;"></div>
</div>

<script>
  const openBtn = document.getElementById("open-ai-chat");
  const modal = document.getElementById("ai-modal");
  const sendBtn = document.getElementById("send-ai");

  openBtn.addEventListener("click", () => {
    modal.style.display =
      modal.style.display === "none" ? "block" : "none";
  });

  sendBtn.addEventListener("click", () => {
    const message = document.getElementById("ai-message").value;

    if (message.trim() === "") return;

    document.getElementById("ai-response").innerText = "Pensando... ü§î";

    fetch("/chats/1/message", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "X-CSRF-Token": document
          .querySelector("meta[name='csrf-token']").content
      },
      body: JSON.stringify({ message: message })
    })
      .then(res => res.json())
      .then(data => {
        document.getElementById("ai-response").innerText = data.reply;
      });
  });
</script>
