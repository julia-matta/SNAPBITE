<%= form_with model: @restaurant, html: { multipart: true } do |f| %>
  <% if @restaurant.errors.any? %>
    <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= f.label :category, "Categoria" %><br>
    <%= f.select :category, Restaurant::CATEGORIES, {}, class: "form-control" %>
  </div>

  <div>
    <%= f.label :infos, "Informações" %><br>
    <%= f.text_area :infos, rows: 6, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :average_price, "Preço médio por pessoa (R$)" %>
    <%= f.number_field :average_price, class: "form-control", min: 0 %>
    <small class="form-text text-muted">Opcional</small>
  </div>

  <!-- CAMPO DE FOTO -->
  <div class="mb-3">
    <%= f.label :photo, "Foto do restaurante" %><br>
    <%= f.file_field :photo, class: "form-control", direct_upload: true %>
  </div>

  <div class="mt-3">
    <%= f.submit "Salvar restaurante", class: "btn btn-primary" %>
  </div>
<% end %>
